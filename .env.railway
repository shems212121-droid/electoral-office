# Railway Environment Variables Configuration
# Copy these to your Railway project settings

# Django Settings Module - REQUIRED
DJANGO_SETTINGS_MODULE=electoral_office.settings_production

# Security - Generate a new secret key for production
# You can generate one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-generated-secret-key-here

# Debug Mode - Keep as False in production
DEBUG=False

# Allowed Hosts
ALLOWED_HOSTS=web-production-42c39.up.railway.app

# Railway Public Domain
RAILWAY_PUBLIC_DOMAIN=web-production-42c39.up.railway.app

# Database URL - This should be automatically set by Railway when you add PostgreSQL service
# DATABASE_URL=postgresql://user:password@host:port/dbname
