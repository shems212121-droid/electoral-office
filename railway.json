{
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "python manage.py collectstatic --noinput --settings=electoral_office.settings_production"
    },
    "deploy": {
        "startCommand": "gunicorn electoral_office.wsgi --log-file - --log-level debug --timeout 120 --bind 0.0.0.0:$PORT",
        "healthcheckPath": "/test-ping/",
        "healthcheckTimeout": 100,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}