{
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "python manage.py collectstatic --noinput --settings=electoral_office.settings_production"
    },
    "deploy": {
        "startCommand": "python manage.py runserver 0.0.0.0:$PORT --settings=electoral_office.settings_production",
        "healthcheckPath": "/test-ping/",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}