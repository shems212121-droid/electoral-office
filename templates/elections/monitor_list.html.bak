{% extends 'elections/base.html' %}

{% block title %}قائمة المراقبين - المكتب الانتخابي{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-eye"></i> قائمة مراقبي المرشحين</h1>
        <a href="{% url 'monitor_create' %}" class="btn btn-primary">
            <i class="fas fa-plus"></i> إضافة مراقب جديد
        </a>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-header">فلترة المراقبين</div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-5">
                    <label class="form-label">المرشح</label>
                    <select name="candidate" class="form-select">
                        <option value="">جميع المرشحين</option>
                        {% for cand in candidates %}
                        <option value="{{ cand.id }}" {% if request.GET.candidate|stringformat:'s' == cand.id|stringformat:'s' %}selected{% endif %}>
                            {{ cand.full_name }}
                        </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-5">
                    <label class="form-label">الحالة</label>
                    <select name="status" class="form-select">
                        <option value="">جميع الحالات</option>
                        <option value="present" {% if request.GET.status=='present' %}selected{% endif %}>حاضر</option>
                        <option value="left" {% if request.GET.status=='left' %}selected{% endif %}>انصرف</option>
                        <option value="absent" {% if request.GET.status=='absent' %}selected{% endif %}>غير حاضر
                        </option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">بحث</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Monitors List -->
    <div class="card">
        <div class="card-header">
            <span>المراقبين ({{ total_count }})</span>
        </div>
        <div class="card-body">
            {% if monitors %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>الاسم</th>
                            <th>نوع الدور</th>
                            <th>المرشح (إن وجد)</th>
                            <th>رقم الهاتف</th>
                            <th>مركز الاقتراع</th>
                            <th>رقم المحطة</th>
                            <th>القسم</th>
                            <th>الحالة</th>
                            <th>تاريخ الإضافة</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for monitor in monitors %}
                        <tr>
                            <td>{{ monitor.full_name }}</td>
                            <td>
                                {% if monitor.role_type == 'candidate_observer' %}
                                <span class="badge bg-primary">مراقب مرشح</span>
                                {% else %}
                                <span class="badge bg-info text-dark">وكيل كيان</span>
                                {% endif %}
                            </td>
                            <td>{{ monitor.candidate.full_name|default:"-" }}</td>
                            <td>{{ monitor.phone }}</td>
                            <td>{{ monitor.voting_center_name|default:"-" }}</td>
                            <td>{{ monitor.station_number|default:"-" }}</td>
                            <td>{{ monitor.section|default:"-" }}</td>
                            <td>
                                {% if monitor.status == 'present' %}
                                <span class="badge bg-success">{{ monitor.get_status_display }}</span>
                                {% elif monitor.status == 'left' %}
                                <span class="badge bg-warning">{{ monitor.get_status_display }}</span>
                                {% else %}
                                <span class="badge bg-secondary">{{ monitor.get_status_display }}</span>
                                {% endif %}
                            </td>
                            <td>{{ monitor.created_at|date:"Y-m-d" }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if is_paginated %}
            <nav class="mt-3">
                <ul class="pagination justify-content-center">
                    {% if page_obj.has_previous %}
                    <li class="page-item"><a class="page-link"
                            href="?page=1{% if request.GET.candidate %}&candidate={{ request.GET.candidate }}{% endif %}{% if request.GET.status %}&status={{ request.GET.status }}{% endif %}">الأولى</a>
                    </li>
                    <li class="page-item"><a class="page-link"
                            href="?page={{ page_obj.previous_page_number }}{% if request.GET.candidate %}&candidate={{ request.GET.candidate }}{% endif %}{% if request.GET.status %}&status={{ request.GET.status }}{% endif %}">السابقة</a>
                    </li>
                    {% endif %}

                    <li class="page-item active"><span class="page-link">{{ page_obj.number }}</span></li>

                    {% if page_obj.has_next %}
                    <li class="page-item"><a class="page-link"
                            href="?page={{ page_obj.next_page_number }}{% if request.GET.candidate %}&candidate={{ request.GET.candidate }}{% endif %}{% if request.GET.status %}&status={{ request.GET.status }}{% endif %}">التالية</a>
                    </li>
                    <li class="page-item"><a class="page-link"
                            href="?page={{ page_obj.paginator.num_pages }}{% if request.GET.candidate %}&candidate={{ request.GET.candidate }}{% endif %}{% if request.GET.status %}&status={{ request.GET.status }}{% endif %}">الأخيرة</a>
                    </li>
                    {% endif %}
                </ul>
            </nav>
            {% endif %}

            {% else %}
            <p class="text-center text-muted py-5">
                <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                لا يوجد مراقبين
            </p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}